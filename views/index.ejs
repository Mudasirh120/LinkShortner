<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" href="/logo.png" type="image/png" />
    <title>Link Shortner</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shrinker</h1>
      <form
        action="/url/shorten"
        method="post"
        class="my-4 d-flex align-items-center gap-2"
      >
        <label for="url" class="visually-hidden">Full Url</label>
        <input
          class="form-control"
          type="url"
          name="url"
          id="url"
          placeholder="Url"
          required
        />
        <button type="submit" class="btn btn-success">Shrink</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% Urls.forEach((url)=>{ %>
          <tr>
            <td><a href="<%= url.full %>"><%= url.full %></a></td>
            <td>
              <span style="display: flex; align-items: center; gap: 10px"
                ><a href="/url/<%= url.short %>"><%= url.short %></a
                ><img
                  aria-valuetext="<%= url.short%>"
                  src="/copy.svg"
                  class="copy"
                  style="filter: invert(1)"
                  alt="copy"
              /></span>
            </td>
            <td><%= url.click %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="/copy.js"></script>
  </body>
</html>
